<div class="container">
  <div class="row">

    <div class="col-xs-9">
      <div class="row title">
        <h2><%= @post.title %></h2>
      </div>
      <div class="post_body">
        <%= render "posts/post" %>
      </div>
      <div>
        <button class="btn post_button1" type="submit">Read Comments</button>
        <button class="btn post_button2" type="submit">Read Later</button>
        <button class="btn post_button3" type="submit">Share This Post</button>
      </div>
    </div>

    <div class="col-xs-3" id="sidebar">
      <div class="row">
        <%= image_tag @user.avatar, class: "img-circle center-block img-responsive"%>
      </div>
      <div class="row username">
        <%= link_to @user.username %>
      </div>

      <div class="row" id="ad">
        Advertisement
      </div>

      <div class="row">
        <div id="sidebar_header">
          About the Author
        </div>
        <div id="sidebar_text">
          <%= @user.bio %>
        </div>

      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="col-md-12" id="most_popular">
    <p>Most popular posts</p>
  </div>
  <div class="row" id="bottom_row">
    <% @most_popular.each do |post| %>
      <div class="col-md-3 popular">
        <span class="bottom_titles"><%= post.title %></span>
        <%= link_to post, class: "btn btn-block" do %>
          <%= image_tag post.user.avatar, class: "img-responsive center-block" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
