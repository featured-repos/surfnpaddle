<div class="container">
  <div class="row">
    <h1>Login</h1>
  </div>
  <div class="row form_fields">
    <div class="col-md-offset-3 col-md-6">
      <%= simple_form_for :session do |f| %>
        <%= f.input :username %>
        <%= f.input :password %>
        <%= f.button :submit, "Login", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
